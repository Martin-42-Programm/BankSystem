@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Create New Office</title>
</head>

<body>
<h2>Create New Office</h2>

<form method="post" asp-action="Create" asp-controller="Office">
    <p>
        <label>Address:</label>
        <input type="text" name="address" placeholder="e.g., ul. Pozitano 24" required />
    </p>

    <p>
        <label>Postcode:</label>
        <input type="text" name="postCode" placeholder="e.g., 1000" required />
    </p>
    <p>
        <label>City:</label>
        <input type="text" name="city" placeholder="e.g., Sofia" required />
    </p>
    <p>
        <label>Country:</label>
        <input type="text" name="country" placeholder="e.g., Bulgaria" required />
    </p>

    <button type="submit">Create</button>
</form>

<div>
    @if (!ViewData.ModelState.IsValid)
    {
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    }
</div>

</body>

</html>