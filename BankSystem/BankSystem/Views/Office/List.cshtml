@model List<OfficeServiceModel>

@{
    Layout = "_Layout";
}

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Address</th>
            <th>Postcode</th>
            <th>City</th>
            <th>Country</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var office in Model)
        {
            <tr>
                <td>@(office.Address ?? "Unknown")</td>
                <td>@(office.Postcode)</td>
                <td>@(office.City)</td>
                <td>@(office.Country)</td>
                <td>
                    <form method="post" asp-action="Delete" asp-controller="BankAccount">
                        <input type="hidden" name="id" value="@office.Address" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No offices found.</p>
}
