@page
@model CreditRequest

<h2>Request Credit</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="CreditRequest.Amount"></label>
        <input asp-for="CreditRequest.Amount" class="form-control" />
        <span asp-validation-for="CreditRequest.Amount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
